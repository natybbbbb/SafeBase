{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "types": ["node", "mocha", "chai"],
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "include": ["./scripts", "./test", "./typechain-types", "./hardhat.config.ts"],
  "exclude": ["node_modules", "artifacts", "cache"]
}
